{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2020", "ES2020.Promise"],
    "jsx": "react-jsx",
    "types": ["vite/client"],

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "rootDir": "./src",
    "outDir": "./build",

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.{ts,tsx}"],
  "exclude": ["node_modules", "dist"]
}
