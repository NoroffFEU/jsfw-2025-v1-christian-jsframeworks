{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ES2020", "ES2020.Promise"],
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "outDir": "./build",

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.{ts,tsx}", "./vite.config.ts", "./vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
